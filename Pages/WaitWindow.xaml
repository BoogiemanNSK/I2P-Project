<Window x:Class="I2P_Project.Pages.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2P_Project.Pages"
        mc:Ignorable="d"
        Title="WaitWindow" Height="100" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image x:Name="img_loading" Margin="12,12,12,12"/>
        <Label Content="Please, wait..." Grid.Column="1" FontSize="24" VerticalContentAlignment="Center" FontFamily="/I2P-Project;component/Fonts/#Panton"
               Margin="10,0,0,0"/>
    </Grid>
</Window>
