<Page x:Class="I2P_Project.Pages.MyBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2P_Project.Pages"
        d:DesignHeight="480" d:DesignWidth="905"
        mc:Ignorable="d"
        Title="MyBooks">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Grid.Row="1" FontSize="16" HorizontalAlignment="Center">My Docs</Label>
        <DataGrid Grid.Column="1" Name="myBooksTable" CanUserAddRows="false" CanUserDeleteRows="False" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="checkID" Binding="{Binding checkID}" Visibility="Hidden"/>
                <DataGridTextColumn Header="bookID" Binding="{Binding bookID}" Visibility="Hidden"/>
                <DataGridTextColumn Header="Title" Binding="{Binding b_title}" Width="*"/>
                <DataGridTextColumn Header="Taked" Binding="{Binding c_dateTaked}" Width="*"/>
                <DataGridTextColumn Header="Deadline" Binding="{Binding c_timeToBack}" Width="*"/>
                <DataGridTemplateColumn CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Return" Margin="7,2,7,2"  Width="50" Background="#FF4B4B4B" Foreground="White" FontWeight="Bold" ToolTip="Return book" Cursor="Hand" Click="OnReturn"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Column="1" Grid.Row="3" Click="OnReturn" Width="150" HorizontalAlignment="Center" Margin="0,5,0,5">Return</Button>
        <Button Grid.Column="1" Grid.Row="4" Click="OnRenew" Width="150" HorizontalAlignment="Center" Margin="0,5,0,5">Renew</Button>
    </Grid>
</Page>
