<Window x:Class="I2P_Project.Pages.DocumentsManagementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2P_Project.Pages"
        mc:Ignorable="d"
        Title="DocumentsManagementPage" Height="640" Width="800" Background="#FF8080FF">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="1" FontSize="16" HorizontalAlignment="Center" Margin="361,0,360.6,5" Grid.RowSpan="2" Content="DocList"/>
        <DataGrid Name="myBooksTable" CanUserAddRows="false" CanUserDeleteRows="False" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True" FontWeight="Bold" Height="400" Width="640" SelectionChanged="myBooksTable_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="checkID" Binding="{Binding checkID}" Visibility="Hidden"/>
                <DataGridTextColumn Header="bookID" Binding="{Binding bookID}" Width="*"/>
                <DataGridTextColumn Header="Title" Binding="{Binding b_title}" Width="*"/>
                <DataGridTextColumn Header="Taked" Binding="{Binding c_dateTaked}" Width="*"/>
                <DataGridTextColumn Header="Deadline" Binding="{Binding c_timeToBack}" Width="*"/>
                <DataGridTemplateColumn CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Return" Margin="7,2,7,2"  Width="50" Background="#FF4B4B4B" Foreground="White" FontWeight="Bold" ToolTip="Return book" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox Grid.Row="4" HorizontalAlignment="Right" Height="26" TextWrapping="Wrap" VerticalAlignment="Center" Width="465" Name="SearchTB" Margin="0,6,251,0" Grid.RowSpan="3"/>
        <Button Grid.Row="4" Click="OnSearch" Width="200" HorizontalAlignment="Right" Margin="0,6,46,10" Content="Search book&#xD;&#xA;&#xA;"/>
        <Button Grid.Row="9" Click="OnAddBook" Width="200" HorizontalAlignment="Right" Margin="0,6,551,124" Content="Add book&#xD;&#xA;&#xA;"/>
        <Button Grid.Row="9" Click="OnModifyBook" Width="200" HorizontalAlignment="Center" Margin="296,6,296,124" Content="Modify book&#xD;&#xA;"/>
        <Button Grid.Row="9" Click="OnDeleteBook" Width="200" HorizontalAlignment="Center" Margin="546,6,46,124" Content="Delete book&#xA;&#xA;Delete book&#xD;&#xA;Delete book"/>
        <Button Grid.Row="9" Click="OnBack" Height="40" Width="200" HorizontalAlignment="Center" Margin="296,48,296,61">Back</Button>

    </Grid>
</Window>
