<Page x:Class="I2P_Project.Pages.PageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:I2P_Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="905"
      Title="PageHome">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.Row="1" x:Name="startupImage" Source="/I2P-Project;component/Sprites/user_image.jpg" HorizontalAlignment="Center"/>
        <Label x:Name="lbl_hi" Content="Hi, User!" Foreground="Black" FontSize="25" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="/I2P-Project;component/Fonts/#Panton"/>
    </Grid>
</Page>
