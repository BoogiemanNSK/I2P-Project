<Window x:Class="I2P_Project.Pages.AddDocPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="240" Width="280" WindowStartupLocation="CenterScreen" Title="Add new doc" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label FontSize="20" Content="Add..." Grid.Row="0" HorizontalAlignment="Center" FontFamily="/I2P-Project;component/Fonts/#Panton"/>
        <Button Grid.Row="1" Margin="5,5,5,5" Click="BookClick">Book</Button>
        <Button Grid.Row="2" Margin="5,5,5,5" Click="JournalClick">Journal</Button>
        <Button Grid.Row="3" Margin="5,5,5,5" Click="AVClick">AV</Button>
    </Grid>
</Window>
