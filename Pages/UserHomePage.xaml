<Window x:Class="I2P_Project.Pages.UserHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2P_Project.Pages"
        mc:Ignorable="d"
        Title="UserHomePage" Height="300" Width="300" Background="#FF8080FF">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="1" Name="WelcomeText" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="180" Background="#FF8080FF" TextAlignment="Center" FontSize="16"/>
        <ListBox Grid.Row="3" Name="DocList" Height="128" Width="240"/>
        <TextBox Grid.Row="5" Name="InfoText" VerticalAlignment="Center" HorizontalAlignment="Center" Width="240" Background="#FF8080FF" TextAlignment="Center"/>
        <Button Grid.Row="7" Click="OnCheckOut" Height="20" Width="80" Margin="40,0,0,0" HorizontalAlignment="Left">Check Out</Button>
        <Button Grid.Row="7" Click="OnReturn" Height="20" Width="80" Margin="0,0,40,0" HorizontalAlignment="Right">Return</Button>

    </Grid>
</Window>
