<Window x:Class="I2P_Project.Pages.TestingTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2P_Project.Pages"
        mc:Ignorable="d"
        Title="TestingTool" Height="420" Width="600">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Name="TestOutput" Grid.Row="1" Grid.Column="1" Height="240" Text="123" Margin="20,20,20,10"/>
        <Label Grid.Row="2" HorizontalAlignment="Center">Enter test num</Label>
        <TextBox Name="TestNumber" Width="120" Grid.Row="3" Margin="0,2,0,2"/>
        <Button Grid.Row="4" Grid.Column="0" Click="OnTest" Height="25" Width="120" HorizontalAlignment="Center" Margin="0,2,0,2">Test</Button>
        <Button Grid.Row="5" Grid.Column="0" Click="OnExit" Height="25" Width="120" HorizontalAlignment="Center">Exit</Button>
        
    </Grid>
</Window>
